{
  "name": "tray",
  "version": "1.4.1",
  "description": "Tray functionality for Inkdrop",
  "repository": "https://github.com/jmerle/inkdrop-tray",
  "license": "MIT",
  "main": "./src/index",
  "scripts": {
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "lint:eslint": "eslint --format codeframe 'src/**'",
    "lint:prettier": "prettier --check --ignore-path .gitignore '**/*.{less,yml,json}'",
    "fix": "yarn fix:eslint && yarn fix:prettier",
    "fix:eslint": "yarn lint:eslint --fix",
    "fix:prettier": "prettier --write --ignore-path .gitignore '**/*.{less,yml,json}'"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-formatter-codeframe": "^7.32.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "husky": "4.3.8",
    "lint-staged": "^12.3.7",
    "prettier": "2.6.1",
    "rimraf": "^3.0.2"
  },
  "engines": {
    "inkdrop": "^5.x"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "electron": "12.0.4"
          }
        }
      ],
      "@babel/preset-react"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "prettier"
    ],
    "plugins": [
      "react",
      "prettier"
    ],
    "parser": "@babel/eslint-parser",
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "globals": {
      "inkdrop": true
    },
    "settings": {
      "react": {
        "version": "latest"
      }
    },
    "ignorePatterns": [
      "dist/"
    ],
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --format codeframe --fix"
    ],
    "*.{less,yml,json}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid"
  }
}
